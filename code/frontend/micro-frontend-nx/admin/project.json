{
    "name": "admin",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "admin/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/admin",
                "index": "admin/src/index.html",
                "main": "admin/src/main.ts",
                "tsConfig": "admin/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "admin/public"
                    }
                ],
                "styles": [
                    "admin/src/styles.scss"
                ],
                "customWebpackConfig": {
                    "path": "admin/webpack.config.ts"
                }
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all",
                    "customWebpackConfig": {
                        "path": "admin/webpack.prod.config.ts"
                    }
                },
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/angular:dev-server",
            "options": {
                "port": 4205,
                "publicHost": "http://localhost:4205"
            },
            "configurations": {
                "production": {
                    "buildTarget": "admin:build:production"
                },
                "development": {
                    "buildTarget": "admin:build:development"
                }
            },
            "defaultConfiguration": "development",
            "dependsOn": [
                "shell:serve"
            ]
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "buildTarget": "admin:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "defaultConfiguration": "production",
            "options": {
                "buildTarget": "admin:build",
                "port": 4205,
                "watch": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "admin:build:development"
                },
                "production": {
                    "buildTarget": "admin:build:production"
                }
            }
        }
    }
}